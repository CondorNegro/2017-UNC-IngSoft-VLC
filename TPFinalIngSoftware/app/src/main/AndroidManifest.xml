<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fcefyn.fcefynapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"

        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controladores.Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Vistas.VisualizarPublicacion" />
        <activity android:name=".Controladores.ControllerGetListas"/>
        <activity android:name=".Vistas.BorrarOModificarScreen"/>


        <activity android:name=".Vistas.listadoPublicaciones" />
        <activity
            android:name=".Controladores.login"
            android:label="@string/title_activity_login" />
        <activity android:name=".Controladores.ConsultasYContactos" />
        <activity
            android:name=".Controladores.register"
            android:label="@string/title_activity_register" />
        <activity android:name=".Vistas.CrearModifBorrarPublicaciones" />
        <activity android:name=".Vistas.CrearPublicacion" />

    </application>

</manifest>