<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="horizontal"
    tools:context=".Controladores.Menu">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:id="@+id/estudiantes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="clickEnEstudiantes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_below="@+id/TitleMenu"
        android:layout_alignEnd="@+id/TitleMenu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información Administrativa"
        android:id="@+id/infoAdmin"
        android:layout_below="@+id/estudiantes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnInformacionAdministrativa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Últimas noticias"
        android:id="@+id/ultimasNews"
        android:layout_below="@+id/infoAdmin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnUltimasNoticias"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud"
        android:id="@+id/salud"
        android:layout_below="@+id/ultimasNews"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnSalud"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carreras"
        android:id="@+id/carreras"
        android:layout_below="@+id/salud"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnCarreras"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apuntes"
        android:id="@+id/apuntes"
        android:layout_below="@+id/carreras"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="clickEnApuntes"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cultura y deportes"
        android:id="@+id/culturaYDeportes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnCulturaYDeportes"
        android:layout_below="@+id/apuntes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contactos y consultas"
        android:id="@+id/contactosYConsultas"
        android:layout_below="@+id/culturaYDeportes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clickEnContactosYConsultas"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:id="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/TitleMenu"
        android:layout_below="@+id/contactosYConsultas"
        android:layout_alignEnd="@+id/contactosYConsultas"
        android:clickable="true"
        android:onClick="clickEnIniciarSesión"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registarse"
        android:id="@+id/reg"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
